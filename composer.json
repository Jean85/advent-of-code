{
    "name": "jean85/advent-of-code",
    "description": "Advent of code playground",
    "type": "project",
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "facile-it/facile-coding-standard": "^0.5.1"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Alessandro Lai",
            "email": "alessandro.lai85@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "thecodingmachine/safe": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "Jean85\\AdventOfCode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "vendor/bin/php-cs-fixer fix --dry-run --diff",
        "cs-fix": "vendor/bin/php-cs-fixer fix"
    }
}
